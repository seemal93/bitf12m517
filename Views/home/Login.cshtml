@model MvcApplication2.Models.User
           @{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Khaadi Login</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Contentcss/shop-homepage.css" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/font-awesome/css/font-awesome.min.css" />
    <script type="text/javascript" src="~/Content/bootstrap/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>
<body>
   
    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">

            <a class="navbar-brand" href="#"></a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <div>

                <a href="/Home/Index" title="" class="logo"><img src="~/images/khaadi_logo.png" alt=""></a>
                &emsp;&emsp;
                &emsp;&emsp;

                <a href="/User/Women"><font size="6" color="black"> Women    |</font></a>

                <a href="/User/Man"><font size="6" color="black">Man    |</font> </a>

                <a href="/User/Home"><font size="6" color="black">    Home</font></a>

                <form action="/User/Search" class="pull-right">
                    <input id="search" type="text" placeholder="SEARCH" name="search" value="" class="form-group-lg" maxlength="128">
                    <input style="background-color:black;color:white" type="submit" value="Search" class="btn btn-primary">
                </form>

            </div>


        </div>

        <div class="row">
            <hr />
            

            <form id="login-form" action="/Home/check" method="post">


                <div class=" col-md-6">
                    <div class="col2-set">
                        <div class="col-1 registered-users">


                            <div id="contentdiv" class="contcustom">
                                <span class="fa fa-spinner bigicon"></span>
                                <br />
                                <h3><i class="icon-signin"></i>Registered Customers</h3>
                                <hr />
                                <p>If you have an account with us, please log in.</p>
                                <br />

                                <div>
                                    <label for="email" class="required">Email Address</label>
                                    <div class="input-box">
                                        <input type="text" required="" name="email" value="" id="email" class="input-text required-entry validate-email" title="Email Address">
                                    </div>
                                    <label for="pass" class="required">Password</label>
                                    <div class="input-box">
                                        <input type="password" required="" name="pass" class="input-text required-entry validate-password" id="pass" title="Password">
                                    </div>
                                    <div class="col-lg-12 "style="padding-left:1em;color:red">
                                        <br />
                                        <p>@ViewBag.LoginError</p>
                                    </div>
                                    <br />
                                        <button id="button1" style="background-color:black" class="btn btn-medhidden wide fa fa-unlock medhidden redborder"></button>
                                     
                                </div>

                            </div>
                         

                            </div>
                        </div>
                    </div>

                <style>
                    .redborder {
                        border: 2px solid #f96145;
                        border-radius: 2px;
                    }

                    .hidden {
                        display: none;
                    }

                    .visible {
                        display: normal;
                    }

                    .colored {
                        background-color: #F0EEEE;
                    }

                    .row {
                        padding: 20px 0px;
                    }

                    .bigicon {
                        font-size: 97px;
                        color: #f96145;
                    }

                    .contcustom {
                        text-align: center;
                        width: 300px;
                        border-radius: 0.5rem;
                        top: 0;
                        bottom: 0;
                        left: 0;
                        right: 0;
                        margin: 10px auto;
                        background-color: #F0EEEE;
                        padding: 20px;
                    }



                    h3 {
                        margin-bottom: 20px;
                        font-weight: bold;
                        color: black;
                    }



                    .med {
                        font-size: 27px;
                        color: white;
                    }

                    .medhidden {
                        font-size: 27px;
                        color: #f96145;
                        padding: 10px;
                        width: 100%;
                    }

                    .wide {
                        background-color: #8EB7E4;
                        width: 100%;
                        -webkit-border-top-right-radius: 0;
                        -webkit-border-bottom-right-radius: 0;
                        -moz-border-radius-topright: 0;
                        -moz-border-radius-bottomright: 0;
                        border-top-right-radius: 0;
                        border-bottom-right-radius: 0;
                    }
                </style>




            </form>
          
            <form id="signup-form" action="/Home/Signup">


                <div class="col-md-6">
                    <div class="col-2 new-users">


                        <!-- using (Html.BeginForm("Add", "User", FormMethod.Post)){}-->

                        <div class="contcustom">
                            <br />
                            <h3><i class="icon-user"></i>New Customers</h3>
                            <hr />
                            <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>

                            <br />
                            <button style="background-color:black;color:white" type="submit" class="button" title="Create an Account" name="send1" id="send3"><span><span>Create an Account</span></span></button>
                            
                        </div>


                    </div>
                </div>
            </form>
