@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["name"] != null) { 
<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Khaadi products</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Contentcss/shop-homepage.css" rel="stylesheet">

</head>
<body>
    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">

            <a class="navbar-brand" href="#"></a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <div>

                <a href="/Home/Index" title="" class="logo"><img src="~/images/khaadi_logo.png" alt=""></a>
                &emsp;&emsp;
                &emsp;&emsp;

                <a href="/User/Women"><font size="6" color="black"> Women    |</font></a>

                <a href="/User/Man"><font size="6" color="black">Man    |</font> </a>

                <a href="/User/Home"><font size="6" color="black">    Home</font></a>

                <form action="/User/Search" class="pull-right">
                    <input id="search" type="text" placeholder="SEARCH" name="search" value="" class="form-group-lg" maxlength="128">
                    <input style="background-color:black;color:white" type="submit" value="Search" class="btn btn-primary">
                </form>


            </div>


        </div>


        <!-- Page Content -->
        <div class="container">
            <div class="row">

                <div class="col-md-12">
                    <div class="row carousel-holder">
                        <div class="col-md-12">

                            <hr />

                            <br />
                            <br />



                            <div class="row">
                                <div class="col-lg-6">
                                    <img src=@Model.Picture width="450" height="500" alt="">


                                </div>

                                <div class="col-lg-6">
                                    <br />
                                    <br />
                                    <br />
                                    @if (Model.Catagory == "Unstiched")
                                    {
                                        <div class="product-name">
                                            <p><h2><b>@Model.Name Suit</b></h2> </p>
                                            <p><b>Product code: KCW-@Model.Id</b></p>
                                            <h4>Has been successfully added to your cart!</h4>
                                        </div>
                                    }
                                    @if (Model.Catagory == "Pret")
                                    {
                                        <div class="product-name">
                                            <p><h2><b>Khaadi Pret(@Model.Name)</b></h2> </p>
                                            <p><b>Product code: KCW-@Model.Id</b></p>
                                            <h4>Has been successfully added to your cart!</h4>
                                        </div>
                                    }
                                    @if (Model.Catagory == "Man")
                                    {
                                        <div class="product-name">
                                            <p><h2><b>@Model.Name</b></h2></p>
                                            <p><b>Product code: KCW-@Model.Id</b></p>
                                            <h4>Has been successfully added to your cart!</h4>
                                        </div>
                                    }
                                    @if (Model.Catagory == "Accessories")
                                    {
                                        <div class="product-name">
                                            <p><h2><b>@Model.Name</b></h2></p>
                                            <p><b>Product code: KCW-@Model.Id</b></p>
                                            <h4>Has been successfully added to your cart!</h4>
                                        </div>

                                    }
                                    @if (Model.Catagory == "Home")
                                    {
                                        <div class="product-name">
                                            <p><h2><b>@Model.Name</b></h2></p>
                                            <p><b>Product code: KCW-@Model.Id</b></p>
                                            <h4>Has been successfully added to your cart!</h4>
                                        </div>
                                    }


                                </div>
                                <br />
                                <hr />

                                <br /><br /><br />
                                <br /><br /><br /><br />
                                <div class="add-to-box">

                                    <div class="add-to-cart">
                                        <div class="col-lg-2">
                                          
                                            @using (Html.BeginForm("Continue", "User", FormMethod.Post))
                                            {

                                                @Html.HiddenFor(m => m.Catagory)
                                                <button class="btn btn-primary btn-lg" style="background-color:black;color:white">Continue Shopping</button>
                                            }
                                            
                                        </div>

                                        <div class="col-lg-2">
                                            @*<form action="/User/Checkout">*@
                                            @using (Html.BeginForm("Checkout", "User", FormMethod.Post))
                                            {

                                                <button class="btn btn-primary btn-lg" style="background-color:black;color:white">Checkout</button>
                                            @*</form>*@
                                            }
                                        </div>
                                    </div>




                                </div>



                            </div>


                        </div>



                    </div>


                </div>



            </div>

        </div>

    </div>



